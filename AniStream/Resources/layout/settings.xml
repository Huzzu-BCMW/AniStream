<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appbar"
        android:elevation="20dp"
        android:layout_height="?attr/actionBarSize">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/settingstoolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_marginTop="80px"
                app:srcCompat="@drawable/reswhite" />

            <TextView
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_width="321dp"
                android:textAlignment="center"
                android:layout_marginTop="50px"
                android:layout_height="wrap_content"
                android:text="Anistream is an anime streaming app that allows users to stream anime with absolutely no ads and interruptions. Our app has a huge selection of anime that you cant even find on premium streaming services." />

            <Space
                android:layout_width="match_parent"
                android:layout_height="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">
                <View style="@style/Divider"/>
                <Button
                    android:id="@+id/buttongithub"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:text="Github"
                    android:textColor="#FFFFFF"
                    style="?android:attr/buttonStyle"/>
                <View style="@style/Divider"/>
                <Button
                    android:id="@+id/buttondiscord"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:text="Discord"
                    android:textColor="#FFFFFF"
                    style="?android:attr/buttonStyle"/>
                <View style="@style/Divider"/>
                <Button
                    android:id="@+id/buttonbackup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Backup Data"
                    android:background="@android:color/transparent"
                    android:textColor="#FFFFFF"/>
                <View style="@style/Divider"/>
                <Button
                    android:id="@+id/buttonrestore"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:text="Restore Data"
                    android:textColor="#FFFFFF"/>
                <View style="@style/Divider"/>

                <Button
                    android:id="@+id/button_check_for_updates"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:text="Check for updates"
                    android:textColor="#FFFFFF"
                    style="?android:attr/buttonStyle"/>
                <View style="@style/Divider"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/dontAskForUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:checked="true"
                    android:drawablePadding="16dp"
                    app:drawableTint="?attr/colorPrimary"
                    android:elegantTextHeight="false"
                    android:fontFamily="@font/poppins_bold"
                    android:minHeight="64dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:text="Don't ask for updates"
                    android:background="@android:color/transparent"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="0dp"
                    app:showText="false" />
                <View style="@style/Divider"/>

                <Button
                    android:id="@+id/button_login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:textColor="#FFFFFF"
                    style="?android:attr/buttonStyle"/>
                <View style="@style/Divider"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/copyright"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:fontFamily="@font/medium"
            android:text="Â© Jerry08"
            android:textAlignment="center"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>