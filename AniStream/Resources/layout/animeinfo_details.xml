<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/animeCardView"
            android:layout_width="128dp"
            android:layout_height="210dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/details_Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <org.apmem.tools.layouts.FlowLayout
            android:id="@+id/details_FlowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/anime_info_item_start_margin"
            android:layout_marginEnd="@dimen/anime_info_item_end_margin"
            android:layout_marginBottom="@dimen/anime_info_item_spacing" />

        <TextView
            android:id="@+id/details_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/anime_info_item_start_margin"
            android:layout_marginEnd="@dimen/anime_info_item_end_margin"
            android:layout_marginBottom="@dimen/anime_info_item_spacing"
            android:theme="@style/type_value"
            tools:text="BAKUSOU KYOUDAI LET'S GO WGP" />

        <TextView
            android:id="@+id/details_OtherNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/anime_info_item_start_margin"
            android:layout_marginEnd="@dimen/anime_info_item_end_margin"
            android:layout_marginBottom="@dimen/anime_info_item_spacing"
            android:theme="@style/type_value"
            tools:text="BAKUSOU KYOUDAI LET'S GO WGP" />

        <TextView
            android:id="@+id/details_Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/anime_info_item_start_margin"
            android:layout_marginEnd="@dimen/anime_info_item_end_margin"
            android:layout_marginBottom="@dimen/anime_info_item_spacing"
            android:theme="@style/type_value"
            tools:text="TV Series" />

        <TextView
            android:id="@+id/details_Released"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/anime_info_item_start_margin"
            android:layout_marginEnd="@dimen/anime_info_item_end_margin"
            android:layout_marginBottom="@dimen/anime_info_item_spacing"
            android:theme="@style/type_value"
            tools:text="TV Series" />

        <TextView
            android:id="@+id/details_Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/anime_info_item_start_margin"
            android:layout_marginEnd="@dimen/anime_info_item_end_margin"
            android:layout_marginBottom="@dimen/anime_info_item_spacing"
            android:theme="@style/type_value"
            tools:text="Completed" />

        <TextView
            android:id="@+id/details_Summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/anime_info_item_start_margin"
            android:layout_marginEnd="@dimen/anime_info_item_end_margin"
            android:layout_marginBottom="@dimen/anime_info_item_spacing"
            android:theme="@style/type_value"
            tools:text="aaaaaaaaaaaaaaaaaaaa" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>